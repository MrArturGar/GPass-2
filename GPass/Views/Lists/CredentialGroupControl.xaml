<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="GPass.Views.Elements.CredentialGroupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GPass.Views.Elements"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    x:Name="ControlRoot"
    PointerEntered="ButtonAdd_PointerEntered"
    PointerExited="ButtonAdd_PointerExited">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="NameList" 
         ItemsSource="{x:Bind ItemsSource, Mode=OneWay}" 
         SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}" 
         AllowDrop="True"
         CanReorderItems="{x:Bind IsEditing, Mode=OneWay}"
         ReorderMode="Enabled" 
         SelectionMode="{Binding IsEditing, ElementName=ControlRoot, Converter={StaticResource BooleanToListViewNotSelectableConverter}}">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="EditBox"
                         Text="{Binding Name, Mode=TwoWay}" 
                         BorderBrush="Transparent"
                         Background="Transparent"
                         Visibility="{Binding IsEditing, ElementName=ControlRoot, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <TextBlock Text="{Binding Name, Mode=OneWay}" 
                        Visibility="{Binding IsEditing, ElementName=ControlRoot, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='Inverted'}"/>

                        <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Spacing="5"
                            Visibility="{Binding IsEditing, ElementName=ControlRoot, Converter={StaticResource BooleanToVisibilityConverter}}" >
                            <TextBlock Text="⬍" HorizontalTextAlignment="Center" Padding="0" Height="20" Width="20" />
                            <Button Content="×" x:Name="ButtonDelete" Padding="0" Height="25" Width="25"
                                Command="{Binding DataContext.GroupViewModel.DeleteCredentialGroupCommand, ElementName=ControlRoot}"
                                CommandParameter="{Binding}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Visibility="Collapsed" VerticalAlignment="Bottom" Padding="30 10" Height="50" >
            <Button Content="Add" Margin="0 0 5 0"
            Visibility="{Binding IsEditing, ElementName=ControlRoot, Converter={StaticResource BooleanToVisibilityConverter}}"
            Command="{x:Bind AddCommand}" />
            <Button x:Name="ButtonEdit" 
            Content="{x:Bind IsEditing, Converter={StaticResource EditButtonContentConverter}, Mode=OneWay}" 
            Command="{x:Bind ToggleEditCommand}" />
            <Button x:Name="ButtonCancel" 
            Visibility="{Binding IsEditing, ElementName=ControlRoot, Converter={StaticResource BooleanToVisibilityConverter}}"
            Content="Cancel" 
            Command="{x:Bind CancelEditCommand}" />
        </StackPanel>
    </Grid>
</UserControl>